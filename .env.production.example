# Database Configuration
DB_USER=postgres
DB_PASSWORD=CHANGE_THIS_IN_PRODUCTION
DB_NAME=platform

# JWT Secrets (IMPORTANT: Change these in production!)
JWT_ACCESS_SECRET=CHANGE_THIS_SECRET_IN_PRODUCTION
JWT_REFRESH_SECRET=CHANGE_THIS_REFRESH_SECRET_IN_PRODUCTION

# JWT Token Expiration
ACCESS_TOKEN_TTL=900
REFRESH_TOKEN_TTL=30

# Instructions:
# 1. Copy this file to .env.production
# 2. Replace all CHANGE_THIS values with strong, random secrets
# 3. Never commit .env.production to git
# 4. Use strong passwords (minimum 32 characters, random)
#
# Example to generate a random secret:
# openssl rand -base64 32
